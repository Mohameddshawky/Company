@model UserDto
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit User</h1>
    <form method="post" asp-controller="User" asp-action="Edit" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>   
         <div class="mt-4 text-center">
    <button type="submit" class="btn btn-success mx-2 px-4 shadow">
        <i class="bi bi-check-circle me-2"></i> Save
    </button>

    <a asp-controller="User" asp-action="Index" class="btn btn-secondary mx-2 px-4 shadow">
        <i class="bi bi-arrow-left-circle me-2"></i> Back To List
    </a>
</div>
    </form>
</div>

