<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Company.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Company.PL.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-2">
        <div class="container-fluid px-4">

            <a class="navbar-brand d-flex align-items-center fw-bold text-primary" asp-controller="Home" asp-action="Index">
                <i class="bi bi-stack me-2 fs-4 text-primary"></i>
                Company<span class="text-dark">.PL</span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav mx-auto gap-2">
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active text-primary fw-semibold bg-light" : "text-secondary")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded text-secondary"
                           asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-lock me-1"></i> Privacy
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded text-secondary"
                           asp-controller="Department" asp-action="Index">
                            <i class="bi bi-diagram-3 me-1"></i> Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded text-secondary"
                           asp-controller="Employee" asp-action="Index">
                            <i class="bi bi-people me-1"></i> Employees
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded text-secondary"
                           asp-controller="User" asp-action="Index">
                            <i class="bi bi-person-badge me-1"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded text-secondary"
                           asp-controller="Role" asp-action="Index">
                            <i class="bi bi-shield-check me-1"></i> Roles
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="btn btn-outline-danger fw-semibold d-flex align-items-center gap-2 px-3"
                           asp-controller="Account" asp-action="SignOut">
                            <i class="bi bi-box-arrow-right"></i>
                            Sign Out
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Company.PL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("validationSection", required: false)
</body>
</html>


<style>
    .navbar-nav .nav-link {
        transition: all 0.2s ease;
    }
    .navbar-nav .nav-link:hover {
        background-color: #f8f9fa;
        color: #0d6efd !important;
    }
    .navbar-nav .nav-link.active {
        background-color: #e9f2ff !important;
        border-radius: 8px;
    }
    .btn-outline-danger:hover {
        color: #fff !important;
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
    }
</style>