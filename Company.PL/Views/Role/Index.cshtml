@model IEnumerable<RoleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />
<a class="btn btn-primary" asp-controller="Role" asp-action="Create">Create Role</a>
<br />
<div class="m-2">
    <form class="row offset-2" asp-action="Index" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="Search by role name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-dark" value="Search" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => role.Id)</td>
                    <td>@Html.DisplayFor(u => role.Name)</td>
                    <partial name="ButtonsPartialView" model="@role.Id" />                  
                </tr>           
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Roles Found !!</h2>
    </div>
}
