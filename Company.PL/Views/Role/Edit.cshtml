@model RoleDto
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Role</h1>
    <form method="post" asp-controller="Role" asp-action="Edit" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>   
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>   
        <h3>Assign Users To Roles</h3>
        <div class="form-group">
            @for(int i = 0; i < Model.users.Count; i++)
            {
                <div class="form-check">     
                    <input asp-for="@Model.users[i].UserId" hidden  />
                    <input asp-for="@Model.users[i].UserName" hidden />
                    <input asp-for="@Model.users[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label">@Model.users[i].UserName</label>
                </div>
            }
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Edit" />
            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
