@model RoleDto
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Role</h1>
    <form method="post" asp-controller="Role" asp-action="Edit" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>   
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>   
        <h3>Assign Users To Roles</h3>
        <div class="form-group mt-3">
    
    <div class="list-group shadow-sm rounded">
        @for (int i = 0; i < Model.users.Count; i++)
        {
            <div class="list-group-item d-flex align-items-center justify-content-between border-0 border-bottom">
                <div class="d-flex align-items-center">
                    <input asp-for="@Model.users[i].UserId" type="hidden" />
                    <input asp-for="@Model.users[i].UserName" type="hidden" />
                    <input asp-for="@Model.users[i].IsSelected"
                           class="form-check-input me-3"
                           id="user_@i" />
                    <label class="form-check-label fw-semibold text-dark" for="user_@i">
                        @Model.users[i].UserName
                    </label>
                </div>
                <span class="badge bg-light text-secondary border rounded-pill px-3">
                    User #@(i + 1)
                </span>
            </div>
        }
    </div>
</div>

         <div class="mt-4 text-center">
    <button type="submit" class="btn btn-success mx-2 px-4 shadow">
        <i class="bi bi-check-circle me-2"></i> Save
    </button>

    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary mx-2 px-4 shadow">
        <i class="bi bi-arrow-left-circle me-2"></i> Back To List
    </a>
</div>
    </form>
</div>


