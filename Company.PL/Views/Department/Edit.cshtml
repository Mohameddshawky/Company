@model CreateDepartmentDto
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<br/>
<br/>


<form asp-action="Edit">
    

    <partial name="DepartmentPartialView/CreateEditPartialView" />
      
   <div class="mt-4 text-center">
    <button type="submit" class="btn btn-success mx-2 px-4 shadow">
        <i class="bi bi-check-circle me-2"></i> Save
    </button>

    <a asp-controller="Department" asp-action="Index" class="btn btn-secondary mx-2 px-4 shadow">
        <i class="bi bi-arrow-left-circle me-2"></i> Back To List
    </a>
</div>
</form>

@section validationSection {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
