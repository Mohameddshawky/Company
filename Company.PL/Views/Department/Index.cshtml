@model IEnumerable<Departments>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />

<a asp-action="Create" asp-controller="Department" class ="btn btn-primary">Create Department</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of creation</th>
                <th>Details</th>
                <th>update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success">update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are no Department(:</h4>
    </div>
}


