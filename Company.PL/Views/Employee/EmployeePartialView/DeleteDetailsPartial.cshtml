@model Employee
 
        <div class="d-flex flex-column align-items-center mb-4">
    <div class="border border-3 border-light shadow-sm rounded-3 d-flex justify-content-center align-items-center"
         style="width: 150px; height: 150px; background-color: #f8f9fa;">
        <img src="~/files/images/@(Model.ImageName ?? "user.png")"
             alt="Employee Photo"
             style="max-width: 100%; max-height: 100%; object-fit: contain; object-position: center;" />
    </div>

    <h2 class="mt-3 fw-semibold text-secondary">Edit Employee</h2>
</div>


<div class="row g-4">
    <div class="col-md-6">
       
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Age" class="form-label fw-bold"></label>
            <input asp-for="Age" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label fw-bold"></label>
            <input asp-for="Phone" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Salary" class="form-label fw-bold"></label>
            <input asp-for="Salary" class="form-control" readonly />
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="Address" class="form-label fw-bold"></label>
            <input asp-for="Address" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="HiringDate" class="form-label fw-bold"></label>
            <input asp-for="HiringDate" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="CreateAt" class="form-label fw-bold"></label>
            <input asp-for="CreateAt" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Department</label>
            <input type="hidden" asp-for="DepartmentId" />
            <input class="form-control" value="@Model.Departments?.Name" readonly />
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="IsActive" class="form-check-input" disabled />
            <label asp-for="IsActive" class="form-check-label fw-bold"></label>
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="IsDeleted" class="form-check-input" disabled />
            <label asp-for="IsDeleted" class="form-check-label fw-bold"></label>
        </div>
    </div>
</div>
